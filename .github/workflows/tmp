name: onCreateTag Actions
run-name: Build the Docker image ${{ github.ref_name }} ðŸš€
on:
  push:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest
    permissions:
      contents: write
    steps:
      - name: Check out repository code
        uses: actions/checkout@v3
        with:
          path: main
          ref: main
      - name: Clone the Infra repo
        uses: actions/checkout@v3
        with:
          repository: francois1059/poc-api-infra
          path: infra
          ref: main
      - name: Update the image tag in values
        run: yq '.image.tag = "blabla"' -i infra/poc-api/values.yaml
      
      # - name: Push changes
      #   uses: ad-m/github-push-action@master
      #   with:
      #     repository: francois1059/poc-api-infra
      #     github_token: ${{ secrets.GITHUB_TOKEN }}
      #     directory: infra
      #     branch: main