{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es2021",
      "dom"
    ],
    "outDir": "dist",
    "paths": {
      "@lib/*": ["src/lib/*"],
      "@todos/*": ["src/todos/*"],
      "@app/*": ["src/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
